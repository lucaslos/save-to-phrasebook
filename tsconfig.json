{
  "compilerOptions": {
    "target": "es6",
    "outDir": "./dist/js",
    "module": "commonjs",            // specify module code generation
    "strictNullChecks": true,   // enable strict null checks as a best practice
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "keyofStringsOnly": true,
  },
  "include": [
    "src"
  ],
}
